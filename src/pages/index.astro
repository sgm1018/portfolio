---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Sergio González Martínez - Portfolio">
  <Navbar />
  <style>
    .background-image {
      position: relative;
      width: 20vw;
      height: 100%; /* altura completa de la pantalla, ajústala según necesites */
      background-size: cover;
    }

    /* Pseudo-elemento para el gradiente de suavizado */
    .background-image::after {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      /* Gradiente radial que va de transparente en el centro a el color de fondo en los bordes */
      background: radial-gradient(
        ellipse at center,
        transparent 60%,
        currentColor 100%
      );
      pointer-events: none; /* Para que no interfiera con otros elementos */
    }

    .background-image::before {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 25%; /* Ajusta la altura del gradiente */
      background: linear-gradient(to bottom, transparent, var(--background));
      pointer-events: none;
    }
  </style>
  <main class="pt-20">
    <!-- Hero -->
    <section id="home" class="min-h-screen flex items-center justify-center">
      <div class="container flex justify-center items-center px-6 py-12">
        <div class="flex flex-row flex-nowrap gap-20 items-center just">
